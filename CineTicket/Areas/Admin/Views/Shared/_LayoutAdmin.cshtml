<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Admin Panel - CineTicket</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Admin CSS -->
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" />

    <!-- jQuery + Validation -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>
    <nav class="sidebar">
        <ul>
            <li><a asp-area="" asp-controller="Movie" asp-action="Index">Về Web phim</a></li>
            <li><a asp-area="Admin" asp-controller="Users" asp-action="Index">Quản lý Tài Khoản</a></li>
            <li><a asp-area="Admin" asp-controller="Movies" asp-action="Index">Quản lý Phim</a></li>
            <li><a asp-area="Admin" asp-controller="Showtimes" asp-action="Index">Quản lý Lịch Chiếu</a></li>
            <li><a asp-area="Admin" asp-controller="Tickets" asp-action="Index">Quản lý Vé</a></li>
        </ul>
    </nav>

    <main class="content">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
