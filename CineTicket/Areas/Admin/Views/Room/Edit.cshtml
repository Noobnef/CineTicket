@model CineTicket.Models.Room

@{
    ViewData["Title"] = "Sửa Phòng";
}

<h1>Sửa Phòng</h1>

<form method="post" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeatCount"></label>
        <input asp-for="SeatCount" class="form-control" />
        <span asp-validation-for="SeatCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TicketPrice"></label>
        <input asp-for="TicketPrice" class="form-control" />
        <span asp-validation-for="TicketPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
