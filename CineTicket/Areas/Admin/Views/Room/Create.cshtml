@model CineTicket.Models.Room

@{
    ViewData["Title"] = "Tạo phòng";
}

<h1>Tạo phòng mới</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="SeatCount"></label>
        <input asp-for="SeatCount" class="form-control" />
        <span asp-validation-for="SeatCount"></span>
    </div>

    <div class="form-group">
        <label asp-for="TicketPrice"></label>
        <input asp-for="TicketPrice" class="form-control" />
        <span asp-validation-for="TicketPrice"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
