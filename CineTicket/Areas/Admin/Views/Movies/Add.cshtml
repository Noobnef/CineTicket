@model CineTicket.Models.Showtime
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var movies = ViewBag.Movies as List<SelectListItem> ?? new List<SelectListItem>();
    var rooms = ViewBag.Rooms as List<SelectListItem> ?? new List<SelectListItem>();
}

<h2 class="mb-4">Thêm suất chiếu</h2>

<form asp-action="Add" method="post">
    <div class="form-group mb-3">
        <label asp-for="MovieId" class="form-label"></label>
        <select asp-for="MovieId" class="form-control" asp-items="movies"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RoomId" class="form-label"></label>
        <select asp-for="RoomId" class="form-control" asp-items="rooms"></select>
        <span asp-validation-for="RoomId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StartTime" class="form-label"></label>
        <input asp-for="StartTime" class="form-control" type="datetime-local"
               value="@(Model.StartTime == default ? "" : Model.StartTime.ToString("yyyy-MM-ddTHH:mm"))" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
