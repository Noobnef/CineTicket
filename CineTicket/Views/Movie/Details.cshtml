@model CineTicket.Models.Movie
@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<link href="~/css/details.css" rel="stylesheet" />

<div class="container movie-details-container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="movie-poster">
                <img src="@Model.PosterUrl"
                     alt="@Model.Title Poster"
                     class="img-fluid rounded-lg shadow-lg">
            </div>
        </div>

        <div class="col-md-8">
            <div class="card movie-info-card">
                <div class="movie-info-header">
                    <h1 class="mb-0">@Model.Title</h1>
                </div>

                <div class="card-body">
                    <div class="row detail-row">
                        <div class="col-4 fw-bold">Thể loại:</div>
                        <div class="col-8">
                            <span class="badge bg-primary">@Model.Genre</span>
                        </div>
                    </div>

                    <div class="row detail-row">
                        <div class="col-4 fw-bold">Năm sản xuất:</div>
                        <div class="col-8">
                            <i class="bi bi-calendar-date me-2"></i>
                            @Model.ReleaseDate.ToString("yyyy")
                        </div>
                    </div>

                    <div class="detail-row">
                        <h4 class="mb-3">Mô tả</h4>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index", "Movie")"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </a>
                        <a href="@Url.Action("Index", "Booking", new { movieId = Model.Id })"
                           class="btn btn-book text-white">
                            Đặt vé ngay <i class="bi bi-ticket-detailed ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/details.js"></script>