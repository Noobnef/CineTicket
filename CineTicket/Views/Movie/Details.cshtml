@model CineTicket.Models.Movie
@{
    ViewData["Title"] = "Chi tiết phim";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .text-justify {
        text-align: justify;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="card-img-top img-fluid rounded">
                <div class="card-body bg-light">
                    <h5 class="card-title text-center">@Model.Title</h5>
                    <p class="card-text text-center"><span class="badge bg-primary">@Model.Genre</span></p>
                    <p class="card-text text-center"><i class="bi bi-calendar-date"></i> @Model.ReleaseDate.ToString("yyyy")</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h2>@Model.Title</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Thông tin chi tiết</h4>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Thể loại:</strong>
                        </div>
                        <div class="col-md-9">
                            @Model.Genre
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <strong>Năm sản xuất:</strong>
                        </div>
                        <div class="col-md-9">
                            @Model.ReleaseDate.ToString("yyyy")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h5>Mô tả:</h5>
                            <p class="text-justify">@Model.Description</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index", "Movie")" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                        <a href="@Url.Action("Index", "Booking", new { movieId = Model.Id })" class="btn btn-success">Đặt vé ngay</a>

                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>