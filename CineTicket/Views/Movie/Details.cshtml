@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model CineTicket.Models.Movie
@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
<link href="~/css/darkmode.css" rel="stylesheet" />
<link href="~/css/lightmode.css" rel="stylesheet" />
<div class="container py-5 movie-details-container">
    <div class="row g-4">
        <!-- Poster -->
        <div class="col-md-4">
            <div class="border rounded-3 shadow-sm overflow-hidden">
                <img src="@Model.PosterUrl"
                     alt="@Model.Title Poster"
                     class="img-fluid">
            </div>
        </div>

        <!-- Movie info -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent border-bottom">
                    <h2 class="mb-0">@Model.Title</h2>
                </div>

                <div class="card-body">
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">@Localizer["Genre"]:</label>
                        <div class="col-sm-8">
                            <span class="badge bg-primary">@Model.Genre</span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">@Localizer["ProductionYear"]:</label>
                        <div class="col-sm-8">
                            <i class="bi bi-calendar-date me-2"></i>
                            @Model.ReleaseDate.ToString("yyyy")
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label fw-bold">@Localizer["ReleaseDate"]:</label>
                        <div class="col-sm-8">
                            @Model.ReleaseDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <div class="mb-3">
                        <h5 class="col-form-label fw-bold">@Localizer["Description"]: </h5>
                        <p>@Model.Description</p>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index", "Movie")"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>@Localizer["Back"]
                        </a>

                        <a href="@Url.Action("Index", "Booking", new { movieId = Model.Id })"
                           class="btn btn-danger text-white">
                            @Localizer["BookNow"] <i class="bi bi-ticket-detailed ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional theme toggle -->
<div class="position-fixed top-0 end-0 p-3">
    <button id="themeToggle" class="btn btn-sm btn-outline-dark" title="Chuyển giao diện">
        <i class="bi bi-circle-half"></i>
    </button>
</div>
<script src="~/js/movie.js"></script>
