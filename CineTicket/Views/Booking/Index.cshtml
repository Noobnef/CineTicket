<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chọn Ghế - CineTicket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6c5ce7;
            --secondary-color: #d63031;
            --light-gray: #f1f2f6;
        }

        body {
            background-color: var(--light-gray);
            font-family: 'Inter', Arial, sans-serif;
        }

        .theater-container {
            max-width: 800px;
            margin: 2rem auto;
            background-color: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .screen {
            background: linear-gradient(to right, #2c3e50, #3498db);
            color: white;
            padding: 15px;
            margin-bottom: 30px;
            text-align: center;
            border-radius: 10px;
            font-weight: bold;
            letter-spacing: 2px;
        }

        .seat-container {
            display: grid;
            grid-template-columns: repeat(8, 1fr);
            gap: 10px;
            justify-content: center;
        }

        .seat {
            aspect-ratio: 1/1;
            background-color: #e0e0e0;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            border: 2px solid transparent;
        }

        .seat:hover:not(.occupied) {
            transform: scale(1.05);
            border-color: var(--primary-color);
        }

        .seat.selected {
            background-color: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .seat.occupied {
            background-color: var(--secondary-color);
            cursor: not-allowed;
            color: white;
            opacity: 0.7;
        }

        .seat-label {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 0.7rem;
            font-weight: bold;
            color: rgba(0,0,0,0.6);
        }

        .legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .legend span {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .legend .seat {
            width: 25px;
            height: 25px;
        }

        .total-section {
            margin-top: 20px;
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 10px;
        }

        
    </style>
</head>
<body>
    <div class="container">
        <div class="theater-container">
            <h2 class="text-center mb-4">Chọn Ghế</h2>
            <div class="screen">MÀN HÌNH</div>
            <div class="seat-container" id="seat-container">
                <!-- Seats will be dynamically generated here -->
            </div>
            <div class="legend">
                <span><div class="seat"></div> Ghế trống</span>
                <span><div class="seat selected"></div> Đang chọn</span>
                <span><div class="seat occupied"></div> Đã đặt</span>
            </div>
            <div class="total-section text-center">
                <h4>Tổng tiền: <span id="total-price" class="text-primary">0</span> VND</h4>
                <button id="book-btn" class="btn btn-primary mt-3" disabled>Đặt vé</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const seatContainer = document.getElementById("seat-container");
            const totalPriceElement = document.getElementById("total-price");
            const bookButton = document.getElementById("book-btn");
            const seatPrice = 50000; // Giá mỗi ghế
            const rowLabels = ['A', 'B', 'C', 'D', 'E'];
            const seats = [];

            // Generate seats with row and seat numbers
            for (let row = 0; row < rowLabels.length; row++) {
                for (let col = 1; col <= 8; col++) {
                    seats.push({
                        id: `${rowLabels[row]}${col}`,
                        occupied: Math.random() < 0.2
                    });
                }
            }

            seats.forEach(seat => {
                const seatElement = document.createElement("div");
                seatElement.classList.add("seat");
                
                const seatLabel = document.createElement("span");
                seatLabel.classList.add("seat-label");
                seatLabel.textContent = seat.id;
                
                if (seat.occupied) {
                    seatElement.classList.add("occupied");
                }
                
                seatElement.appendChild(seatLabel);
                seatElement.addEventListener("click", () => {
                    if (!seat.occupied) {
                        seatElement.classList.toggle("selected");
                        updateTotal();
                    }
                });
                
                seatContainer.appendChild(seatElement);
            });

            function updateTotal() {
                const selectedSeats = document.querySelectorAll(".seat.selected").length;
                const totalPrice = selectedSeats * seatPrice;
                
                totalPriceElement.innerText = totalPrice.toLocaleString();
                bookButton.disabled = selectedSeats === 0;
                
                if (selectedSeats > 0) {
                    bookButton.classList.remove("btn-secondary");
                    bookButton.classList.add("btn-primary");
                } else {
                    bookButton.classList.remove("btn-primary");
                    bookButton.classList.add("btn-secondary");
                }
            }

            bookButton.addEventListener("click", () => {
                const selectedSeats = document.querySelectorAll(".seat.selected");
                const selectedSeatIds = Array.from(selectedSeats).map(seat => seat.querySelector('.seat-label').textContent);
                
                alert(`Đã chọn ghế: ${selectedSeatIds.join(', ')}`);
                // Thêm logic đặt vé ở đây
            });
        });
    </script>
</body>
</html>